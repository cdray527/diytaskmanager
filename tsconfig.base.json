{
    "compilerOptions": {
        "composite": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "importHelpers": true,
        "isolatedModules": true,
        "lib": ["es2022"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "allowImportingTsExtensions": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2022",
        "baseUrl": ".",
        "paths": {
            "@diytaskmanager/libs-frontend-services/*": ["libs/frontend/services/src/*"],
            "@diytaskmanager/libs-frontend-ui/*": ["libs/frontend/ui/src/*"]
        }
    }
}
